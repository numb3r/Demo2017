            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0"
              Grid.RowSpan="3"
              Grid.Column="0"
              Grid.ColumnSpan="4"
              BackgroundColor="#133f51" />

        <Grid Grid.Row="2"
              Grid.RowSpan="2"
              Grid.Column="0"
              Grid.ColumnSpan="4"
              BackgroundColor="#102932" />


        <local:CustomStackLayout
                Grid.Row="2"
                Grid.Column="1"
                x:Name="PageIndicator"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                ItemsSource="{Binding Sheets}"
                IsVisible="True"
                Orientation="Horizontal"
                ItemTemplate="{StaticResource PageIndicatorSelector}">
        </local:CustomStackLayout>



